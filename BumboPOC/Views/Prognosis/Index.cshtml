@model IEnumerable<BumboPOC.Models.PrognosisDay>

@{
    ViewData["Title"] = "Index";
}

<h1>Prognosis input</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Datum
            </th>
            <th>
                Aantal verwachte collies
            </th>
            <th>
                Aantal verwachte klanten
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model) {
        <tr>
            <td>
                    @item.Date.ToShortDateString()
            </td>
            <td>
                    <div class="form-group">
                        <input asp-for=@item.AmountOfCollies class="form-control" />
                        <span asp-validation-for=@item.AmountOfCollies class="text-danger"></span>
                    </div>
                   
            </td>
            <td>
                    <div class="form-group">
                        <input asp-for=@item.AmountOfCustomers class="form-control" />
                        <span asp-validation-for=@item.AmountOfCustomers class="text-danger"></span>
                    </div>
            </td>
        
        </tr>
}


    </tbody>
</table>
