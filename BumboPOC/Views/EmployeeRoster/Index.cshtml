@model BumboPOC.Models.ViewModels.EmployeeShiftsViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="p-3 mb-2 bg-secondary text-white">
    <p>Year | Month | Week </p>
    @*    <img src="img/arrow.png">
    <div class="rotate_img">
    <img src="img/arrow.png">
    </div>*@
</div>

<div>

    @foreach (var shift in Model.PlannedShifts)
    {
        <div class="d-flex flex-row justify-content-around">
            <div class="d-flex flex-column row">
                <h3>@shift.StartTime.Day</h3>
                <p>@shift.StartTime.ToString("MMMM")</p>
            </div>


            <div class="d-flex row justify-content-around border-bottom border-dark ">
                <div class="d-flex flow-row justify-content-between">
                    <h5>@shift.StartTime.ToShortTimeString() - @shift.EndTime.ToShortTimeString()</h5>
                    <p>Bospad 12</p>
                </div>


                <div class="d-flex flow-row justify-content-between">
                    <p>@shift.Department</p>
                    <p>Den bosch</p>
                </div>
            </div>
        </div>
    }
</div>





